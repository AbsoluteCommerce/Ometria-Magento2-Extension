<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../lib/internal/Magento/Framework/Event/etc/events.xsd">
    <!-- Model layer: product delete -->
	<event name="catalog_product_delete_after">
		<observer name="ometria_catalog_product_delete" instance="Ometria\Core\Model\Observer\Product" method="catalogProductDeleteAfter" />
	</event>

    <!-- Model layer: product save -->
	<event name="catalog_product_save_after">
		<observer name="ometria_catalog_product_save" instance="Ometria\Core\Model\Observer\Product" method="catalogProductSaveAfter" />
	</event>

    <!-- Mass Action "Update Attribute" -->                 
	<event name="controller_action_predispatch_catalog_product_action_attribute_save">	
		<observer name="ometria_catalog_product_mass_action_update_attributes" instance="Ometria\Core\Model\Observer\Product" method="catalogProductUpdateAttributes" />
	</event>

	<!-- Mass Action: Update Status -->
	<event name="controller_action_postdispatch_catalog_product_massStatus">
		<observer name="ometria_catalog_product_mass_action_update_status" instance="Ometria\Core\Model\Observer\Product" method="catalogProductUpdateStatus" />
	</event>
	
	<!-- Create a customer from the frontend -->
	<event name="customer_register_success">
		<observer name="ometria_customer_register_success" instance="Ometria\Core\Model\Observer\Customer" method="registered" />
	</event>

    <!-- Customer clicks sign out or otherwise logs out -->
	<event name="customer_login">
		<observer name="ometria_customer_login" instance="Ometria\Core\Model\Observer\Customer" method="loggedIn" />
	</event>

    <!-- Customer clicks Sign in and fills out form or otherwise logs in -->
	<event name="customer_logout">
		<observer name="ometria_customer_logout" instance="Ometria\Core\Model\Observer\Customer" method="loggedOut" />
	</event>
 	
	<event name="customer_save_after">
		<observer name="ometria_customer_save_after" instance="Ometria\Core\Model\Observer\Customer" method="customerSaveAfter" />
	</event>

	<event name="sales_quote_save_after">
		<observer name="ometria_sales_quote_save_after" instance="Ometria\Core\Model\Observer\Cart" method="basketUpdated" />
	</event>

 
